<p id="notice"><%= notice %></p>
<%= javascript_pack_tag 'products/index' %>
<!-- 上部 -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>取扱商品一覧</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to 'ホーム' %></li>
          <li class="breadcrumb-item active">取扱商品一覧</li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<!-- テーブル -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <!-- /.card-header -->
          <div class="card-body">
            <table id="products_example" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th style="width:25%;">取扱商品名</th>
                  <th style="width:15%;">商品区分</th>
                  <th style="width:20%;">主要取引先</th>
                  <th style="width:25%;">メモ欄</th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |product| %>
                  <tr>
                    <td><%= product.product %></td>
                    <td><%= product.category %></td>
                    <td><%= product.main_client %></td>
                    <td><%= product.memo %></td>
                    <td><%= link_to '詳細', product, class:"btn btn-outline-primary btn-sm" %>
                    <%= link_to '編集', edit_product_path(product), class:"btn btn-outline-primary btn-sm" %>
                    <%= link_to '削除', product, method: :delete, class:"btn btn-outline-danger btn-sm", data: { confirm: '本当によろしいでしょうか？' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->
